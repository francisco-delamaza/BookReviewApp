<p style="color: green"><%= notice %></p>

<h1>Reviews</h1>

<div id="reviews">
<table>
  <tr>
    <th>Book</th>
    <th>Review</th>
    <th>Score</th>
    <th>Number of up votes</th>
    <th>Details</th>
  </tr>
  <% @reviews.each do |review| %>
  <tr>
    <td><%= review.book_id %></td>
    <td><%= review.review %></td>
    <td><%= review.score %></td>
    <td><%= review.number_of_up_votes %></td>
    <td><%= link_to "Show", review %></td>
  </tr>
  <% end %>
</table>
</div>
<div>
<%= link_to "New review", new_review_path %>
</div>
<div>
<%= link_to "Home", root_path %>
</div>