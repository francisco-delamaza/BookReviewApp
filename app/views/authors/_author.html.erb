<div id="<%= dom_id author %>">
<% if author.photo_url.present? %>
  <p>
    <strong>Photo:</strong>
    <%= image_tag("/uploads/#{author.photo_url}", alt: 'Author Photo', style: 'max-width: 200px;') %>
    
  </p>
<% end %>


<p>
    <strong>Name:</strong>
    <%= author.name %>
  </p>

  <p>
    <strong>Date of birth:</strong>
    <%= author.date_of_birth %>
  </p>

  <p>
    <strong>Country of origin:</strong>
    <%= author.country_of_origin %>
  </p>

  <p>
    <strong>Short description:</strong>
    <%= author.short_description %>
  </p>

</div>
